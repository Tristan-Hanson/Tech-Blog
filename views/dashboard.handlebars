<button>
    <a href="/post">Write New Post</a>
</button>
<h1>Your posts:</h1>
{{#each posts}}
    <div class="card">
    <div class="card-header">
        {{title}}
    </div>
    <div class="card-body">
        <blockquote class="blockquote mb-0">
        <p>{{text}}</p>
        </blockquote>
    </div>
    </div>
{{/each}}