<div class="row">
  <div class="col-md-6">
    <h2>Login</h2>

    <form class="form login-form" action="/login/login" method="post">
      <div class="form-group">
        <h3>email:</h3>
        <input class="form-input" type="text" name="email-login" />
      </div>
      <div class="form-group">
        <h2 for="password-login">password:</h2>
        <input class="form-input" type="password" name="password-login" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">login</button>
      </div>
    </form>
  </div>
  <div class="col-md-6">
    <h2>Signup</h2>

    <form class="form signup-form" action="/login/create" method="post">
      <div class="form-group">
        <h2 for="name-signup">username:</h2>
        <input class="form-input" type="text" name="username" />
      </div>
      <div class="form-group">
        <h2 for="email-signup">email:</h2>
        <input class="form-input" type="text" name="email" />
      </div>
      <div class="form-group">
        <h2 for="password-signup">password:</h2>
        <input class="form-input" type="password" name="password" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary" type="submit">signup</button>
      </div>
    </form>
  </div>
</div>